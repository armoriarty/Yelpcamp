<!--Comments New.ejs form-->

<% include ../partial/header %>
        <div class="container">
            <div class="row">
                <h1 style="text-align:center;">Add a Comment to <%= campground.name %> </h1> <!-- #####-->

                <div style="min-width: 500px; width: 30%; margin: 30px auto;"> <!-- #####-->
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" name="comment[text]" type="text" rows="4" placeholder="Tell Us about Your Experience" spellcheck=true></textarea>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-lg btn-primary btn-block" type="submit"></input>
                        </div>
                    </form>
                    <a style="width: 30%; margin:0 auto;" href="/campgrounds">Back to Campgrounds</a> <!-- #####-->
                </div> <!-- temp style end #####-->
            </div> <!-- end row-->
        </div> <!-- end container-->
<% include ../partial/footer %>