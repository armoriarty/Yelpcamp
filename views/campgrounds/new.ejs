<!--Campgrounds New.ejs form-->


<% include ../partial/header %>
        <div class="container">
            <div class="row">
                <h1 style="text-align:center;">Create a new Campground!</h1> <!-- #####-->

                <div style="min-width: 500px; width: 30%; margin: 30px auto;"> <!-- #####-->
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" name="campground[name]" type="text" autofocus=true placeholder="Campground Name" required=true ></input>
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="campground[image]" type="url" placeholder="Campground Image URL" required=true></input>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="campground[description]" type="text" rows="4" placeholder="Campground Description" spellcheck=true></textarea>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-lg btn-primary btn-block" type="submit"></input>
                        </div>
                    </form>
                    <a style="width: 30%; margin:0 auto;" href="/campgrounds">Back to Campgrounds</a> <!-- #####-->
                </div> <!-- temp style end #####-->
            </div> <!-- end row-->
        </div> <!-- end container-->
<% include ../partial/footer %>